<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      <%= @hotel.name %>
    </h1>

    <dl>

      <dt>
        Leg
      </dt>
      <dd>
        <%= Leg.find(@hotel.leg_id).name %>
      </dd>
      
      <dt>
        Trip
      </dt>
      <dd>
        <%= Trip.find(Leg.find(@hotel.leg_id).trip_id).name %>
      </dd>
    
    <div class="row mb-3">
      <div class="col">
        <a href="/hotels" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/hotels/<%= @hotel.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit hotel
        </a>
      </div>

      <div class="col">
        <a href="/delete_hotel/<%= @hotel.id %>" class="btn btn-block btn-outline-secondary">
          Delete hotel
        </a>
      </div>
    </div>
  </div>
</div>

