<% if @hotel.errors.any? %>
  <% @hotel.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit hotel #<%= @hotel.id %>
</h1>

<hr>

<form action="/update_hotel/<%= @hotel.id %>" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @hotel.name %>">
  </div>


    <input type="hidden" id="user_id" name="user_id"  value="<%= @hotel.user_id %>">


  <div class="form-group">
    <label for="leg_id">
      Leg
    </label>

    <%= select_tag("leg_id", options_from_collection_for_select(Leg.all, :id, :name, @hotel.try(:leg_id)), :class => "form-control") %>
    or <a href="/legs/new">add a new leg</a> first
    
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update hotel
  </button>
</form>

<hr>

<a href="/hotels">
  Go back
</a>
