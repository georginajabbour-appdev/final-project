<% if @participation.errors.any? %>
  <% @participation.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit participation #<%= @participation.id %>
</h1>

<hr>

<form action="/update_participation/<%= @participation.id %>" method="post">

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @participation.user_id %>">
  </div>

  <div class="form-group">
    <label for="trip_id">
      Trip
    </label>

    <input type="text" id="trip_id" name="trip_id" class="form-control" value="<%= @participation.trip_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update participation
  </button>
</form>

<hr>

<a href="/participations">
  Go back
</a>
