<h1>
  Add a new participation
</h1>


<hr>

<form action="/create_participation" method="post">

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <%= select_tag("user_id", options_from_collection_for_select(User.all, :id, :name, @participation.try(:user_id)), :class => "form-control") %>

  </div>

  <div class="form-group">
    <label for="trip_id">
      Trip
    </label>


    <%= select_tag("trip_id", options_from_collection_for_select(Trip.all, :id, :name, @participation.try(:trip_id)), :class => "form-control") %>

  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create participation
  </button>
</form>

<hr>

<a href="/participations">
  Go back
</a>
