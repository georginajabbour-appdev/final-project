<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Participation #<%= @participation.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/participations" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/participations/<%= @participation.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit participation
        </a>
      </div>

      <div class="col">
        <a href="/delete_participation/<%= @participation.id %>" class="btn btn-block btn-outline-secondary">
          Delete participation
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @participation.user_id %>
      </dd>

      <dt>
        Trip
      </dt>
      <dd>
        <%= @participation.trip_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@participation.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@participation.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

