<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Roomate request #<%= @roomate_request.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/roomate_requests" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/roomate_requests/<%= @roomate_request.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit roomate request
        </a>
      </div>

      <div class="col">
        <a href="/delete_roomate_request/<%= @roomate_request.id %>" class="btn btn-block btn-outline-secondary">
          Delete roomate request
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Requestor
      </dt>
      <dd>
        <%= @roomate_request.requestor_id %>
      </dd>

      <dt>
        Recipient
      </dt>
      <dd>
        <%= @roomate_request.recipient_id %>
      </dd>

      <dt>
        Approved
      </dt>
      <dd>
        <%= @roomate_request.approved %>
      </dd>

      <dt>
        Hotel
      </dt>
      <dd>
        <%= @roomate_request.hotel_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@roomate_request.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@roomate_request.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

