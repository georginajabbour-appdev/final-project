<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All roomate requests
    </h1>

    <a href="/roomate_requests/new" class="btn btn-block btn-outline-secondary">
      Add a new roomate request
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>

        <th>
          Requestor
        </th>

        <th>
          Recipient
        </th>

        <th>
          Approved
        </th>

        <th>
          Hotel
        </th>

        <th>
          Created
        </th>

        <th>
          Updated
        </th>


        <th>
        </th>
        
        <th>
        </th>
      </tr>

      <% @roomate_requests.each do |roomate_request| %>
      <tr>

        <td>
          <%= User.find(roomate_request.requestor_id).name %>
        </td>

        <td>
          <%= User.find(roomate_request.recipient_id).name %>
        </td>

        <td>
          <%= roomate_request.approved %>
        </td>

        <td>
          <%= Hotel.find(roomate_request.hotel_id).name %>
        </td>

        <td>
          <%= time_ago_in_words(roomate_request.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(roomate_request.updated_at) %> ago
        </td>

        <td>
          <a href="/roomate_requests/<%= roomate_request.id %>/edit" class="btn btn-primary">
          Edit
          </a>
        </td>

        <td>
          <a href="/delete_roomate_requests/<%= roomate_request.id %>" class="btn btn-danger">
          Delete
          </a>
        </td>
        
      </tr>
      <% end %>
    </table>
  </div>
</div>
