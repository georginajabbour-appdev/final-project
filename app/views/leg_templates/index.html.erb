<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All legs
    </h1>

    <a href="/legs/new" class="btn btn-block btn-outline-secondary">
      Add a new leg
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          Name
        </th>

        <th>
          Trip
        </th>

        <th>
          Created at
        </th>


        <th>
        </th>
      </tr>

      <% @legs.each do |leg| %>
      <tr>
        <td>
          <%= leg.name %>
        </td>

        <td>
          <%= Trip.find(leg.trip_id).name %>
        </td>

        <td>
          <%= time_ago_in_words(leg.created_at) %> ago
        </td>

        <td>
          <a href="/legs/<%= leg.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
